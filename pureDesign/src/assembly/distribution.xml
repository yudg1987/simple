<assembly
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2  http://maven.apache.org/xsd/assembly-1.1.2.xsd">
<!--    <id>${build.number}</id>-->
    <id>distribution</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <moduleSets>
        <moduleSet>
            <sources>
                <excludes>
                    <exclude>src/main/resources/*.properties</exclude>
                </excludes>
            </sources>
        </moduleSet>
    </moduleSets>
    <fileSets>
        <fileSet>
            <outputDirectory>doc</outputDirectory>
            <directory>target/classes/doc</directory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>nacos</outputDirectory>
            <directory>target/classes/nacos</directory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>logs</outputDirectory>
            <directory>.</directory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>/sql</outputDirectory>
            <directory>target/classes/sql</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>run</outputDirectory>
            <directory>.</directory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>lib</outputDirectory>
            <directory>target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>target/classes/bin</directory>
            <!--换行符格式，windows是\r\n，unix是\n等-->
            <lineEnding>unix</lineEnding>
            <fileMode>0744</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>conf</outputDirectory>
            <directory>target/classes</directory>
            <includes>
                <include>*.yaml</include>
                <include>*.yml</include>
                <include>*.properties</include>
                <include>*.json</include>
                <include>*.conf</include>
                <include>*.xml</include>
                <include>config/**</include>
            </includes>
<!--            <excludes>-->
<!--                <exclude>application-test.properties</exclude>-->
<!--                <exclude>application-dev.properties</exclude>-->
<!--            </excludes>-->
        </fileSet>
    </fileSets>

</assembly>
